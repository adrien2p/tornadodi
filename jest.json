{
  "testEnvironment": "node",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "json"
  ],
  "transform": {
    "^.+\\.ts?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "roots": ["src"],
  "collectCoverageFrom" : [
    "src/core/*.{js,jsx,tsx,ts}",
    "src/decorators/*.{js,jsx,tsx,ts}",
    "!src/constants/*.{js,jsx,tsx,ts}",
    "!src/core/index.{js,jsx,tsx,ts}",
    "!src/decorators/index.{js,jsx,tsx,ts}",
    "!src/constants/index.{js,jsx,tsx,ts}"
  ],
  "coverageReporters": ["json", "lcov"]
}